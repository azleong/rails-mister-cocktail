<%= render "/shared/navbar" %>

<hr>

<div class="container">
  <!-- @cocktail defined in `def show` -->
  <h1><%= @cocktail.name %></h1>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
  
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail.id), class: "btn btn-primary"  %>
</div>